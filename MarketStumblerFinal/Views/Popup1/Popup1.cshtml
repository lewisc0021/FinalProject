@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Symbol</title>
    <style type="text/css">
        html, body, .container {
            height: 100%;
            min-height: 100%;
        }

        .Graph {
            float: left;
            width: 100%;
            height: 70%;
            background-color: white;
        }

        .details {
            float: right;
            width: 0%;
            height: 50%;
            background-color: white;
        }

        .Paragraph {
            float: left;
            width: 100%;
            height: 30%;
            background-color: white;
            font-weight: normal;
            font-family : sans-serif;
            justify-content :flex-end;
            font-size :small;
        }
    </style>
</head>
<body>
        <div class="Graph" >       
            
                 <div style="position:absolute; TOP:35px; LEFT:170px; WIDTH:140px; HEIGHT:85px"
                  
                 data-widget="TradingView.Widget"
                 data-yint="true"
                 data-title="Title">
            </div>                           
                <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
                    <script type="text/javascript">
                        new TradingView.widget({
                            "width": 878,
                            "height": 400,
                            "symbol": "@Html.Raw(ViewBag.Symbol)",
                            "interval": "D",
                            "timezone": "Etc/UTC",
                            "theme": "White",
                            "style": "3",
                            "locale": "en",
                            "toolbar_bg": "#f1f3f6",
                            "enable_publishing": false,
                            "allow_symbol_change": true,
                            "hideideas": true
                        });                                                           
                    </script>                 
            </div>
 <br/>
 <br/>
 <br/>
       
        <div class="Paragraph" align="center" font-weight = "normal">
           <h4>COMPANY DESCRIPTION:</h4> 
            <p>@ViewBag.Paragraph</p>            
        </div>

</body>
</html>
