@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Symbol</title>
    <style type="text/css">
        html, body, .container {
            height: 100%;
            min-height: 100%;
        }

        .Graph {
            float: left;
            width: 70%;
            height: 50%;
            background-color: white;
        }

        .details {
            float: right;
            width: 30%;
            height: 50%;
            background-color: white;
        }

        .Paragraph {
            float: left;
            width: 100%;
            height: 50%;
            background-color: white;
        }
    </style>
</head>
<body>
        <div class="Graph" >       
            <div style="width: 500px; height: 250px"
                 data-widget="TradingView.Widget"
                 data-yint="true"
                 data-title="Title">
            </div>                           
                <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
                    <script type="text/javascript">
                        new TradingView.widget({
                            "width": 700,
                            "height": 500,
                            "symbol": "@Html.Raw(ViewBag.Symbol)",
                            "interval": "D",
                            "timezone": "Etc/UTC",
                            "theme": "White",
                            "style": "3",
                            "locale": "en",
                            "toolbar_bg": "#f1f3f6",
                            "enable_publishing": false,
                            "allow_symbol_change": true,
                            "hideideas": true
                        });                                                           
                    </script>                 
            </div>
 <br/>
 <br/>
 <br/>
       
        <div class="Paragraph" align="center">
            <h4>@ViewBag.Paragraph</h4>            
        </div>

</body>
</html>
