@model MarketStumblerFinal.Models.Stock
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/content/css/tiletemplatewith1.css" rel="stylesheet" />
    <title>StumblePage</title>
</head>
<body>
    <div> 
    <h3>Symbol :         @Model.Symbol</h3>  
    <h3>Company :        @Model.Name</h3>
    <h3>Bid :            @Model.Bid</h3>
    <h3>Ask :            @Model.Ask</h3>
    <h3>Open Price :     @Model.Open</h3>
    <h3>Closing Price :  @Model.PreviousClose</h3>
    <h3>Latest Price :   @Model.Last</h3> 
    </div>             
<div>
    <h3>@Html.ActionLink("Stumble", "StumblePage", "Results")</h3>
    <a href="/Popup1/Popup1?Symbol=@Model.Symbol" class="Button">See Graph</a>

    <input type="button" value="Change my settings" onclick="@("window.location.href='" + @Url.Action("index", "Personalize") + "'");" />
    <a href="#" onclick="javascript: window.open('/Popup1/Popup1?Symbol=@Model.Symbol', '123', 'location=no,width=900px,height=600px'); return false;">details</a>

</div>
  
    <div>
        <table>

            @if (ViewBag.myStocks != null)
            {
                foreach (var item in ViewBag.myStocks)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Symbol</td>
                        <td>@item.Last</td>
                    </tr>
                }
            }
        </table>
    </div>

    

    <div style="width:37.5%; float: left;" class="container">
        <div class="space">Test</div>
    </div>



    <div style="width:25%; height:75%; float: left;" class="container">
        <div class="top">Test</div>
        <div class="symbol">@Model.Symbol</div>
        <div class="mid">Test</div>
        <div class="change" >@Model.perChange</div>

        
        @if (@Model.perChange > 0)
        {
            <div class="arrow" style="color: #7FFF00">&#8593;</div>
        }
        @if (@Model.perChange < 0)
        {
            <div class="arrow" style="color: red">&#8595;</div>
        }

        @if (@Model.perChange == 0)
        {
            <div class="arrow" style="color: white">&#8211;</div>
        }
        <div class="price">Bid</div>
        <div class="companyname">@Model.Name</div>
    </div>

    <div style="width:37.5%;  float: right;" class="container">
        <div class="space">Test</div>
    </div>

</body>
</html>
