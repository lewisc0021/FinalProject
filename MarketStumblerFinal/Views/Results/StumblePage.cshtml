@model MarketStumblerFinal.Models.Stock
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/content/css/tiletemplatewith1.css" rel="stylesheet" />
    <title>StumblePage</title>
</head>
<body>
    <center>
        <div style="width:37.5%; float: left;" class="container">
            <div class="space">Test</div>
        </div>


        <a href="#" onclick="javascript: window.open('/Popup1/Popup1?Symbol=@Model.Symbol', '123', 'location=no,width=900px,height=600px'); return false;">details>
            <div style="width:25%; height:75%; float: left;" class="container" href="/Popup1/Popup1?Symbol=@Model.Symbol">
                <div id="tile">
                    <div class="top">Test</div>
                    <div class="symbol">@ViewBag.Symbol</div>
                    <div class="mid">Test</div>
                    <div class="change">@Model.perChange%</div>


                    @if (@Model.perChange[0] == '+')
                    {
                        <div class="arrow" style="color: #7FFF00">&#8593;</div>
                    }
                    @if (@Model.perChange[0] == '-')
                    {
                        <div class="arrow" style="color: red">&#8595;</div>
                    }

                    @if (@Model.perChange[0] == ' ')
                    {
                        <div class="arrow" style="color: white" ; font-size 5em;>&#8211;</div>
                    }
                    <div class="price">$@Model.Bid</div>
                </div>
                <div class="companyname">@ViewBag.Name</div>
            </div>
            </a>
            <div style="width:37.5%;  float: right;" class="container">
                <div class="space">Test</div>
            </div>

</center>
        
            <br>
            <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>

        <br>
    <center>
        <div class="StumbleButton">
            <h3 align="center" class="Button"> @Html.ActionLink("Capitalize", "StumblePage", "Results")</h3>
           

            <input type="button" value="Change my settings" onclick="@("window.location.href='" + @Url.Action("index", "Personalize") + "'");" />
           <!-- <a href="#" onclick="javascript: window.open('/Popup1/Popup1?Symbol=@Model.Symbol', '123', 'location=no,width=900px,height=800px'); return false;">details</a>-->

        </div>
    </center>

            <table>

                @if (ViewBag.myStocks != null)
            {
                foreach (var item in ViewBag.myStocks)
                {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Symbol</td>
                            <td>@item.Last</td>
                        </tr>
                    }
                }
            </table>
            </div>

</body>
</html>
